{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "ES2022",
    "target": "es2018",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "lib",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "*": ["./node_modules/*"]
    }
  },
  "files": ["src/index.ts"],
  "include": ["src/*.ts"],
  "exclude": ["**/*.spec.ts", "node_modules"]
}
